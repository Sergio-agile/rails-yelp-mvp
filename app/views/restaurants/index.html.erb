<div class="container">
  <h1 class="m-3">Restaurants</h1>
    <ul class="list-group m3">
      <% @restaurants.each do |restaurant|  %>
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="ms-2 me-auto">
          <div class="fw-bold"><%= restaurant.name %></div>
          <%= restaurant.address %>
        </div>
        <span class="badge bg-primary rounded-pill"><%= restaurant.category %></span>
        <%= link_to 'See details', restaurant_path(restaurant), {class: "btn btn-primary btn-sm ms3"} %>
      </li>
      <% end %>
    </ul>
    <%= link_to 'Add Restuaurant', new_restaurant_path, { class: "btn btn-primary btn-lg" } %>
</div>
